<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>
<body>
    <div class="header">
        <%- include('../misc/header') %>
    </div>
    <div class="main_container">
        <div class="subcategories">
            <h1 id="category_name"><%- section.name %></h1>
            <ul id="subcategory_list">
				<% section.subsections.forEach(subsection => { %>
					<a href='/listing/<%=subsection.id%>'><%- subsection.name %></a>
				<% }) %>
			</ul>
        </div>
        <% if (user != null) { %>
            <% if (user.accesslevel.category_admin) { %>
                <a href="/subsection/admin/<%=section.id%>"><%-lang.listing_item.edit%></a>
            <% } %>
        <% } %>
    </div>
</body>
</html>