<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="/lapa/listing_item.css">
    <title></title>
</head>
<body>
    <div class="header">
        <%- include('../misc/header') %>
        
    </div>
    <div class="main_container">

        <div class="listing">
            <h1 id="listing_name"><%- listing.title %></h1>
			<% media.forEach((item, index) => { %>
				<img src="/files/<%= item.uuid + item.extension %>" alt="descripting image">
			<% });%>
            <div class="description">
                <p><%-listing.body%></p>
                <p><%-lang.listing_item.startprice%> - <%-listing.start_price%>$</p>
                <p><%-lang.listing_item.author%> - <a href="/user/profile/<%=author_profile%>"><%-author%></a></p>
                <p><%-lang.listing_item.postdate%> <%-listing.createdAt%></p>
                <% if (user != null) { %>
                    <% if (authorid == user.id || user.accesslevel.category_admin) { %>
                        <a href="/listing/edit?listingId=<%=listing.id%>"><%-lang.listing_item.edit%></a>
                    <% } %>
                <% } %>
			</div>
			<div class="listing_data"><img src='<%listing.media%>' alt='listingimage'></div>
        </div>
    </div>
</body>
</html>