<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>
<body>
    <div class="header">
        <%- include('../misc/header') %>
    </div>
    <div class="main_container">
        <div class="subcategories">
            <% if (lang.header.current_lang == "ENG") { %>
                <h1 id="category_name"><%- section.name %></h1>
            <% } else if(lang.header.current_lang == "LV") { %>
                <h1 id="category_name"><%- section.nameLV %></h1>
            <% } %>
            <ul id="subcategory_list">
				<% section.subsections.forEach(subsection => { %>
					<% if (lang.header.current_lang == 'ENG') { %>
                        <a href='/listing/<%=subsection.id%>'><%- subsection.name %></a>
                    <% } else if(lang.header.current_lang == 'LV') { %>
                        <a href='/listing/<%=subsection.id%>'><%- subsection.nameLV %></a>
                    <% } %>
					<a href="/subsection/edit/<%=section.id%>?subsectionId=<%=subsection.id%>"><%-lang.admin.edit%></a>
				<% }) %>
			</ul>
        </div>
		<a href="/subsection/create/<%=section.id%>"><%-lang.admin.add_subsect%></a>
        <a href="/subsection/<%=section.id%>"><%-lang.admin.return_subsect%></a>
    </div>
</body>
</html>