{
    "compilerOptions": {
        "module": "ES6",
        "rootDir":"./source",
        "outDir":"./build",
		"moduleResolution": "node",
        "target": "es6", // or a more recent ecmascript version
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"strict": true,
		"declaration": true
    },
    "exclude": [
        "node_modules",
		".vscode",
		"build",
		"static"
    ],
    "include": [
        "./source/**/*.ts"
    ]
}